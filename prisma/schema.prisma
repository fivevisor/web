generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TokenType {
  Verification
  Redirect
  Session
}

model Token {
  id         Int       @id @default(autoincrement())
  type       TokenType
  email      String
  identifier String    @unique
  createdAt  DateTime  @default(now())
  expiresAt  DateTime

  @@unique([type, email])
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
}
